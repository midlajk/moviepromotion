<%- include('../admininclude/head.ejs') %>
    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">List of Users
                </h6>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Phone</th>
                                <th>Location</th>
                                <th>Last OTP</th>
                                <th>Otp generated Date</th>
                                <th>Prize won</th>
                                <th>Spin date</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Phone</th>
                                <th>Location</th>
                                <th>Last OTP</th>
                                <th>Otp generated Date</th>

                                <th>Prize won</th>
                                <th>Spin date</th>

                            </tr>
                        </tfoot>
                        <tbody>

                            <%for(let doc of docs){%>
                                <tr>
                                    <td>

                                        <%=doc.phone%>

                                    </td>
                                    <td>
                                        <%=doc.location%>
                                    </td>
                                    <td>

                                        <%=doc.otp.number%>

                                    </td>
                                    <td>
                                        <%=doc.otp.creationdate.toLocaleString()%>
                                    </td>

                                    <td>
                                        <%=doc.prizewon%>
                                    </td>
                                    <td>
                                        <%doc.spindate?doc.spindate.toLocaleString():''%>
                                    </td>


                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>


    <%- include('../admininclude/end.ejs') %>